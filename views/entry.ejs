<body>
     <div class="title-container">
        <div class="rose-left-container">
            <img class="rose" id="left" src="/images/Rose1.png" alt="roses"> 
        </div>
        <form class="new-entry-form">
            <div class="book-container">
                <div class="book-container-page">  
                    <h2 class="quintessential-regular">Book Name: </h2>
                    <input type="text" class="small-input">
                    <h2 class="quintessential-regular">ISBN: </h2>
                    <input type="text" class="small-input">
                    <h2 class="quintessential-regular">Rating: </p>
                    <span class="fa fa-star checked" id="star-1"></span>
                    <span class="fa fa-star checked" id="star-2"></span>
                    <span class="fa fa-star checked" id="star-3"></span>
                    <span class="fa fa-star" id="star-4"></span>
                    <span class="fa fa-star" id="star-5"></span>
                    <h2 class="quintessential-regular">Date Completed: </h2>
                    <input type="date">
                </div>
                <div class="book-container-page">
                    <h2 class="quintessential-regular">Important Notes </h2>
                    <textarea class="large-input"></textarea>
                </div>
            </div>
            <div class="buttons-row">
                <a class="link-button a" href="/">Back</a>
                <button type="submit" id="submit">Submit</button>
            </div>
        </form>
        <div class="rose-right-container">
            <img class="rose" id="right" src="/images/Rose2.png" alt="roses"> 
        </div>
        </div>
    </div>
